<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_apply_renthouse"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.oridway.wisdomhome.activity.ApplyRenthouseActivity">

    <include layout="@layout/title_shop" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#AAAAAA" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="楼栋"
                        android:textColor="#333333"
                        android:textSize="16dp" />

                <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#AAAAAA" />

                <TextView
                        android:id="@+id/building_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="0001"
                        android:textColor="#333333"
                        android:textSize="16dp" />
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#AAAAAA" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="房号"
                        android:textColor="#333333"
                        android:textSize="16dp" />

                <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#AAAAAA" />

                <TextView
                        android:id="@+id/house_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="0001"
                        android:textColor="#333333"
                        android:textSize="16dp" />
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#AAAAAA" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="出租人"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:id="@+id/seller_renter" />

                <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#AAAAAA" />

                <TextView
                        android:id="@+id/house_owner"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="0001"
                        android:textColor="#333333"
                        android:textSize="16dp" />
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#AAAAAA" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="手机号"
                        android:textColor="#333333"
                        android:textSize="16dp" />

                <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#AAAAAA" />

                <TextView
                        android:id="@+id/house_owner_phone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="0001"
                        android:textColor="#333333"
                        android:textSize="16dp" />
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#AAAAAA" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="每月租金"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:id="@+id/house_price" />

                <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#AAAAAA" />

                <TextView
                        android:id="@+id/pay_rent"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="0001"
                        android:textColor="#333333"
                        android:textSize="16dp" />
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#AAAAAA" />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="支付方式"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:id="@+id/house_area" />

                <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#AAAAAA" />

                <TextView
                        android:id="@+id/pay_type"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="0001"
                        android:textColor="#333333"
                        android:textSize="16dp" />
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#AAAAAA" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="房屋描述"
                        android:textColor="#333333"
                        android:textSize="16dp" />

                <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#AAAAAA" />

                <TextView
                        android:id="@+id/house_desc"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="0001"
                        android:textColor="#333333"
                        android:textSize="16dp" />
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#AAAAAA" />

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/gallery_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
