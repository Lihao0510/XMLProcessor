<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <com.youth.banner.Banner
            android:id="@+id/iv_banner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#CCCCCC"
            app:indicator_drawable_selected="@drawable/white_radius"
            app:indicator_drawable_unselected="@drawable/gray_radius"
            app:indicator_height="8dp"
            app:indicator_margin="5dp"
            app:indicator_width="8dp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#EEEEEE"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="3dp"
                android:src="@mipmap/kuaibao_icon_50" />

        <com.oridway.wisdomhome.widge.ScrollTextView
                android:id="@+id/stv_notice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:text="智慧社区系统已经全面上线,大家可以登录个人中心来设置自己的房屋,经物业审核后可以获得多种权限!"
                android:textSize="14dp" />

        <ImageButton
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="3dp"
                android:background="@mipmap/all_news" />

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5" />

    <com.oridway.wisdomhome.widge.NoScrollGridView
            android:id="@+id/gv_gridbutton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#e5e5e5"
            android:listSelector="#00000000"
            android:numColumns="4" />

</LinearLayout>